<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Scores.Pages.EquipePage"
             Title="Ajouter ou modifier une Équipe"
             BackgroundImageSource="bg.png">

    <!-- Je veux un affichage vertical de ma page, donc VerticalStackLayout. Pas besoin de Grid ici vu le peu d'éléments à empiler.-->
    <VerticalStackLayout>

        <!-- Image décorative en haut de la page.-->
        <Image
            Source="equipepage1.png"
            MaximumHeightRequest="250"
            ScaleX="-1"/>

        <Entry 
            x:Name="NomEntry" 
            Placeholder="Nom de l'équipe" 
            Margin="20"/>

        <!-- Image hors de l'ecran pour animation. 
            Placée à peu prés au milieu de la page pour donner un effet "coupé en deux" au contenu lors du passage. -->
        <Image x:Name="VifDorVolant"
       Source="vifdorlogo.png"
       WidthRequest="400"
       HeightRequest="400"
       TranslationY="-1000"
       IsVisible="False"
       VerticalOptions="Center"
       HorizontalOptions="Start" />
        
        <Entry 
            x:Name="DescriptionEntry" 
            Placeholder="Description de l'équipe" 
            Margin="20"/>

        <!-- Bouton centré en bas de page.-->
        <Button 
            x:Name="Enregistrer"
            Text="Enregistrer" 
            HorizontalOptions="Center" 
            Margin="10"
            BackgroundColor="Gold"
            TextColor="Black"
            Clicked="OnEnregistrerOuMettreAJourClicked"/>

        <!-- Image décorative en bad de la page.-->
        <Image
            Source="vifdor.png"
            MaximumHeightRequest="250"/>
    </VerticalStackLayout>
</ContentPage>