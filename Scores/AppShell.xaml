<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Scores.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Scores"
    xmlns:pages="clr-namespace:Scores.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Scores"
    FlyoutBackgroundColor="LavenderBlush">

    <!-- Images pour equipes et matchs generées par Copilot-->
    <FlyoutItem Title="Liste des équipes" Icon="equipes.png">
        <ShellContent ContentTemplate="{DataTemplate pages:ListeEquipesPage}" Shell.BackgroundColor="LavenderBlush"/>
    </FlyoutItem>


    <FlyoutItem Title="Liste des matchs" Icon="matchs.png">
        <ShellContent ContentTemplate="{DataTemplate pages:ListeMatchsPage}" Shell.BackgroundColor="LavenderBlush"/>
    </FlyoutItem>

</Shell>